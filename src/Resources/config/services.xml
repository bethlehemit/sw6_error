<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Claim our own service, for Guzzle is a dependency, and does not expose a service -->
        <service id="BethlehemIT\Error\Client" class="GuzzleHttp\Client" />

        <service id="BethlehemIT\Error\Subscriber">
            <tag name="kernel.event_subscriber"/>

            <argument type="service" id="logger" on-invalid="null" />
            <argument type="service" id="BethlehemIT\Error\Client"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
    </services>
</container>